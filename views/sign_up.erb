<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">注册</h3>
  </div>
    <form class="form-horizontal" style="margin-bottom:0px;" accept-charset="UTF-8" action="/u/sign_up" method="post">
      <div class="modal-body">
        <div class="control-group">
          <label class="control-label" for="user[u_name]">帐号</label>
          <div class="controls">
            <input id="login" name="users[u_name]" type="text"><br />
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="user[password]">密码</label>
          <div class="controls">
            <input id="login" name="users[password]" type="password"><br />
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="user[password_confirmation]">重复</label>
          <div class="controls">
            <input id="login" name="users[password_confirmation]" type="password"><br />
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
        <input class="form-submit btn btn-primary" style="float:right;" name="commit" type="submit" value="注册">
      </div>
    </form>
</div>
